<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/nike3"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".otp_verification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/verify" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="otp_verifcation"
            android:textColor="#C800FF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Enter OTP" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewphone"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inputotp1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/color"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputotp2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/color"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputotp3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/color"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputotp4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/color"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputotp5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/color"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputotp6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/color"
                android:gravity="center"
                android:padding="7dp"
                android:hint="0"
                android:textColorHint="#838080"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/getotp"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/color"
            android:text="Verify OTP" />
    </LinearLayout>
</LinearLayout>